---
import Localizacion from '../icons/Localizacion.astro';
import Mail from '../icons/Mail.astro';
import LinkedIn from '../icons/LinkedIn.astro';
import Github from '../icons/Github.astro';
import Curriculum from '../icons/Curriculum.astro';
import Icons from '../ui/Icons.astro';

const { title, subtitle, location, email } = Astro.props;
---

<div
	class='flex flex-col md:flex-row gap-6 items-start mb-15 px-4 sm:px-6 md:px-8 lg:px-0'
>
	<img
		class='rounded-full w-24 h-24 sm:w-32 sm:h-32 md:w-40 md:h-40'
		src={Astro.props.avatar}
		alt={title}
	/>

	<div class='text-left'>
		<h1 class='text-white text-3xl sm:text-4xl font-bold mb-1'>{title}</h1>
		<h2 class='text-lg sm:text-xl opacity-75 font-medium mb-2'>
			{subtitle}
		</h2>

		<div class='flex items-center justify-start gap-2 mb-5 opacity-80'>
			<Localizacion class='size-5' />
			<span>{location}</span>
			<img
				width='20'
				height='20'
				src='https://img.icons8.com/color/48/peru.png'
				alt='Bandera de PerÃº'
				class='size-6'
			/>
		</div>

		<div class='flex flex-wrap justify-start items-center gap-5'>
			<Icons href={`mailto:${email}`} class='flex items-center gap-2'>
				<Mail class='size-5' />
				<span>{email}</span>
			</Icons>

			<div class='flex gap-4'>
				<Icons href='/cv.pdf' target='_blank' rel='noopener noreferrer'>
					<Curriculum class='size-5' />
				</Icons>
				<Icons href='https://github.com/AndyGonzalesCastillo'>
					<Github class='size-5' />
				</Icons>
				<Icons
					href='https://www.linkedin.com/in/andy-rodrigo-gonzales-castillo-18a696347/'
				>
					<LinkedIn class='size-4' />
				</Icons>
			</div>
		</div>
	</div>
</div>
